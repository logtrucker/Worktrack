name: One-Time Web Asset Migration

on:
  workflow_dispatch: # This allows you to click "Run workflow" manually

jobs:
  migrate:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Organize Web Files
        run: |
          # 1. Create the standard Android assets directory
          mkdir -p app/src/main/assets
          
          # 2. Move your web files from root to the assets folder
          # Replace 'index.html' etc. with your actual filenames if they differ
          mv *.html app/src/main/assets/ 2>/dev/null || echo "No HTML files found in root"
          mv *.css app/src/main/assets/ 2>/dev/null || echo "No CSS files found in root"
          mv *.js app/src/main/assets/ 2>/dev/null || echo "No JS files found in root"
          
          echo "Files moved to app/src/main/assets/"

      - name: Commit and Push Changes
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"
          git add app/src/main/assets/
          git commit -m "Migrate web app files to Android assets folder"
          git push